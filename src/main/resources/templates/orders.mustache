<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script type="module" src="/utils/formatUtils.js"></script>
</head>
<body>
<div class="container py-5">
    <h1 class="mb-4">Your Orders</h1>
    <ul class="list-group">
        {{#orders}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>Order #{{orderId}}</strong> <br>
                    Date: {{orderDate}} <br>
                    Total Price: <span class="order-price">₩ {{totalPrice}}</span>
                </div>
                <a href="/orders/{{orderId}}" class="btn btn-primary btn-sm">View Details</a>
            </li>
        {{/orders}}
        {{^orders}}
            <p class="text-center text-muted">No orders found.</p>
        {{/orders}}
    </ul>
</div>

<script type="module">
    import { formatPricesInDocument } from '/utils/formatUtils.js';

    document.addEventListener("DOMContentLoaded", () => {
        // 포맷팅 적용
        formatPricesInDocument('.order-price');
    });
</script>
</body>
</html>
